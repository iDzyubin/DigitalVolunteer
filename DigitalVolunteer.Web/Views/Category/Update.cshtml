@model Category
@{
    Layout = "_CrudLayout";
}

<div class="col-md-8 offset-2">
    <div class="card">
        <h3 class="card-header">Обновление категории</h3>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label class="text-muted">Название категории</label>
                    <input asp-for="Name" type="text" class="form-control"/>
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="col-md-6 offset-3 btn btn-outline-info">Обновить</button>
                </div>
            </form>
        </div>
    </div>
</div>