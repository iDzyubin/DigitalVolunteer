@inject ICategoryRepository CategoryRepository
@{
    Layout = "_CrudLayout";
    ViewBag.CurrentBlock = "List";
}

@if( CategoryRepository.GetAll().Count == 0 )
{
    <h1 class="display-4 text-center">На данный момент список категорий пуст</h1>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
        <tr class="d-flex">
            <th class="col-md-8">Название</th>
            <th class="col-md-2"></th>
            <th class="col-md-2"></th>
        </tr>
        </thead>
        <tbody>
        @foreach( var category in CategoryRepository.GetAll() )
        {
            <tr class="d-flex">

                <td class="col-md-8">@category.Name</td>
                <td class="col-md-2 text-center">
                    <a asp-action="Remove" asp-route-id="@category.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
                <td class="col-md-2 text-center">
                    <a asp-action="Update" asp-route-id="@category.Id">
                        <i class="fas fa-pen-alt"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}