@model RegistrationViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="d-flex justify-content-center">
    <div class="col-md-8 col-sm-12">
        <div class="card">
            <h1 class="card-header text-center">Регистрация</h1>
            <div class="card-body">
                <form asp-action="Registration">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Введите e-mail: </label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">Введите имя: </label>
                        <input asp-for="FirstName" type="text" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Введите фамилию: </label>
                        <input asp-for="LastName" type="text" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Введите пароль: </label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Повторите пароль: </label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Номер телефона для связи:</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <br />
                        <button type="submit" class="btn btn-outline-info col-md-6 col-sm-4">Зарегистрироваться</button>
</div>
                </form>
            </div>
        </div>
    </div>
</div>