@model DigitalVolunteer.Web.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Добавить пользователя";
}

<h1>Добавить пользователя</h1>

<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Email" class="control-label">Введите e-mail: </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Password" class="control-label">Введите пароль: </label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Повторите пароль: </label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="FirstName" class="control-label">Имя: </label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="LastName" class="control-label">Фамилия: </label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Phone" class="control-label">Номер телефона для связи:</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                    <input asp-for="IsAdmin" type="checkbox" class="custom-control-input" id="customControlInline2">
                    <label class="custom-control-label" for="customControlInline2">Администратор</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-primary" />
                <a asp-action="List" class="btn btn-outline-primary">Вернуться</a>
            </div>
        </form>
    </div>
</div>

