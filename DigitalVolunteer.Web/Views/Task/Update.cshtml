@model DigitalVolunteer.Core.DomainModels.Task

<div class="col-md-8 offset-2">
    <div class="card">
        <div class="card-header">
            <h4>Обновление информации по заявке</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Task" asp-action="Update" method="post">
                <div class="form-group">
                    <label asp-for="Title" class="text-muted"></label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="text-muted"></label>
                    <textarea asp-for="Description" class="form-control"></textarea> <span asp-validation-for="Title" class="text-danger"></span>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="text-muted"></label>
                        <input asp-for="StartDate" type="date" class="form-control"/>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="text-muted"></label>
                        <input asp-for="EndDate" type="date" class="form-control"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label class="text-muted">Место указания услуги</label>
                    </div>
                    <div class="btn-group btn-group-toggle col-md-12" data-toggle="buttons">
                        <label class="btn btn-outline-primary @(Model.TaskFormat == TaskFormat.Freelance ? "active" : "")">
                            <input asp-for="TaskFormat" type="radio" value="@TaskFormat.Freelance" id="task-format" />
                            @TaskFormat.Freelance.GetDisplayName()
                        </label>
                        <label class="btn btn-outline-primary @(Model.TaskFormat == TaskFormat.UpWork ? "active" : "")">
                            <input asp-for="TaskFormat" type="radio" value="@TaskFormat.UpWork" id="task-format" />
                            @TaskFormat.UpWork.GetDisplayName()
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input asp-for="HasPushNotification" type="checkbox" class="custom-control-input" id="customControlInline1" >
                        <label asp-for="HasPushNotification" class="custom-control-label" for="customControlInline1"></label>
                    </div>
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input asp-for="IsOnlyForExecutors" type="checkbox" class="custom-control-input" id="customControlInline2">
                        <label asp-for="IsOnlyForExecutors" class="custom-control-label" for="customControlInline2"></label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ContactPhone" class="text-muted"></label>
                    <input asp-for="ContactPhone" class="form-control" maxlength="11"/>
                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                </div>
                <div class="col-md-6 offset-3">
                    <button type="submit" class="btn btn-outline-info col-md-12">Обновить</button>
                </div>
            </form>
        </div>
    </div>
</div>