@model DigitalVolunteer.Core.DataModels.DigitalTask

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <a asp-controller="Task" asp-action="Details" asp-route-id="@Model.Id">
                    @Model.Title
                </a>
            </div>
            <div class="card-body">
                <div>@Model.TaskFormat.GetDisplayName()</div>
                <div>@Model.GetScheduleInformation()</div>
            </div>
            <div class="card-footer">
                <a asp-controller="Account" asp-action="Profile" asp-route-id="@Model.Owner.Id">
                    <u>@Model.Owner.GetShortName()</u>
                </a>
            </div>
        </div>
        <br/>
    </div>
</div>