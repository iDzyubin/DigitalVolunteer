@{
    Layout = "_Layout";
    var isListBlockActive = ViewBag.CurrentBlock == "List" ? "active" : "";
    var isAddBlockActive = ViewBag.CurrentBlock == "Add" ? "active" : "";
}

<body>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <div class="list-group-item list-group-item-action disabled">
                    Действия
                </div>
                <a asp-action="Index" class="list-group-item list-group-item-action @isListBlockActive">
                    <i class="fas fa-search"></i> Показать весь список
                </a>
                <a asp-action="Add" class="list-group-item list-group-item-action @isAddBlockActive">
                    <i class="fas fa-plus"></i> Добавить
                </a>
            </div>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>
</body>